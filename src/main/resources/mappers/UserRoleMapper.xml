<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mev.films.mappers.interfaces.UserMapper">

    <resultMap id="userRoleDTO" type="com.mev.films.model.UserRoleDTO">
        <id property="id" column="id"/>
        <result property="login" column="login"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="selectUserRoles" resultMap="userRoleDTO">
        SELECT * FROM
            user_roles
    </select>

    <select id="selectUserRolesByLogin" parameterType="map" resultMap="userRoleDTO">
        SELECT * FROM
            user_roles
        WHERE login = #{0}
    </select>

    <insert id="insertUserRole" parameterType="com.mev.films.model.UserRoleDTO">
        INSERT INTO
            user_roles (login, role)
        VALUES (#{login}, #{role})
    </insert>

    <update id="updateUserRole" parameterType="com.mev.films.model.UserRoleDTO">
        UPDATE
            user_roles
        SET
            role = #{role}
        WHERE
            id = #{id}
    </update>
</mapper>