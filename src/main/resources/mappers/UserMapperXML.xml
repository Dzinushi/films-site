<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mev.films.mappers.interfaces.UserMapper">

    <resultMap id="userDTO" type="com.mev.films.model.UserDTO">
        <id property="id" column="id"/>
        <id property="login" column="login"/>
        <id property="password" column="password"/>
    </resultMap>

    <select id="selectUsers" parameterType="com.mev.films.model.UserDTO" resultMap="map">
        SELECT * FROM users;
    </select>

    <select id="selectUserByName" parameterType="com.mev.films.model.UserDTO" resultMap="map">
        SELECT * FROM users
        WHERE
            users.login=#{0};
    </select>

    <insert id="insertUser" parameterType="com.mev.films.model.UserDTO">
        INSERT INTO
            users (login, password)
        VALUES (#{login}, #{password})
    </insert>

    <update id="updateUser" parameterType="com.mev.films.model.UserDTO">
        UPDATE
            users
        SET
            login = #{login},
            password = #{password}
        WHERE
            id = #{id}
    </update>

    <delete id="deleteUserByName" parameterType="com.mev.films.model.UserDTO">
        DELETE FROM
            users
        WHERE
            login = #{0};
        DELETE FROM
            user_roles
        WHERE login = #{0}
    </delete>
</mapper>