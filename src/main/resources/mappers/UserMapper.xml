<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mev.films.mappers.interfaces.UserMapper">

    <resultMap id="userDTO" type="com.mev.films.model.UserDTO">
        <id property="id" column="id"/>
        <result property="login" column="login"/>
        <result property="password" column="password"/>
        <result property="enabled" column="enabled"/>
        <result property="time" column="time"/>
    </resultMap>

    <select id="selectUsers" resultMap="userDTO">
        SELECT * FROM users;
    </select>

    <select id="selectUser" parameterType="map" resultMap="userDTO">
        SELECT * FROM
            users
        WHERE
            id = #{0}
    </select>

    <select id="selectUsersIdLogin" resultMap="userDTO">
        SELECT
            id,login
        FROM
            users;
    </select>

    <select id="selectUsersSortByLogin" resultMap="userDTO">
        SELECT * FROM
            users
        ORDER BY
            login;
    </select>

    <select id="selectUserByLogin" parameterType="map" resultMap="userDTO">
        SELECT * FROM
            users
        WHERE
            login = #{0};
    </select>

    <insert id="insertUser" parameterType="com.mev.films.model.UserDTO">
        INSERT INTO
            users (login, password, enabled, time)
        VALUES (#{login}, #{password}, #{enabled}, clock_timestamp());
    </insert>

    <update id="updateUser" parameterType="com.mev.films.model.UserDTO">
        UPDATE
            users
        SET
            password = #{password},
            enabled = #{enabled},
            time = clock_timestamp()
        WHERE
            id = #{id};
    </update>

    <delete id="deleteUserByLogin" parameterType="map">
        DELETE FROM
            user_roles ur
        USING users u
        WHERE
            ur.login = u.login
            AND u.login = #{0};
        DELETE FROM
            users u
        WHERE
            u.login = #{0}
    </delete>

</mapper>